<?xml version="1.0"?>
<config>
    <modules>
        <Folio3_MaintenanceMode>
            <version>1.0.0</version>
        </Folio3_MaintenanceMode>
    </modules>
    <global>
        <models>
            <Folio3_MaintenanceMode>
                <class>Folio3_MaintenanceMode_Model</class>
            </Folio3_MaintenanceMode>
        </models>
        <blocks>
            <folio3_maintenanceMode>
                <class>Folio3_MaintenanceMode_Block</class>
            </folio3_maintenanceMode>
        </blocks>
        <helpers>
            <Folio3_MaintenanceMode>
                <class>Folio3_MaintenanceMode_Helper</class>
            </Folio3_MaintenanceMode>
        </helpers>
    </global>
    <stores>
        <default>
            <web>
                <routers>
                    <standard>
                        <area>frontend</area>
                        <class>Folio3_MaintenanceMode_Controller_Router_Standard</class>
                    </standard>
                </routers>
            </web>
        </default>
    </stores>
    <default>
        <web>
            <routers>
                <standard>
                    <area>frontend</area>
                    <class>Folio3_MaintenanceMode_Controller_Router_Standard</class>
                </standard>
            </routers>
        </web>
        <MaintenanceMode>
            <config>
                <isEnabled>0</isEnabled>
                <adminAccess>1</adminAccess>
                <allowedIPs></allowedIPs>
                <pageContent><![CDATA[<h1>we are sorry but this store is down for maintenance</h1>
<h2>please try again later ...</h2>]]></pageContent>
                <upDateTime>Today</upDateTime>
            </config>
        </MaintenanceMode>
    </default>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <MaintenanceMode>
                                            <title>Maintenance Mode</title>
                                        </MaintenanceMode>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
